# HTML files: always revalidate, but serve stale while doing so
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# JavaScript: immutable with long cache (cache-busted via ?v= query param)
/*.js
  Cache-Control: public, max-age=31536000, immutable

# CSS: immutable with long cache
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images: long cache (they rarely change)
/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable
